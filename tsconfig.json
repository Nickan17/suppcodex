{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/contexts/*": ["src/contexts/*"],
      "@/context/*": ["src/contexts/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/design-system/*": ["src/design-system/*"],
      "@/components/*": ["components/*"],
      "@/src/*": ["src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "supabase/**/*",
    "tests/**/*",
    "__tests__/firecrawl-retry.test.ts",
    "**/*.stories.*",
    ".storybook/**/*"
  ]
}
